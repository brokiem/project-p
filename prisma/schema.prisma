generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  uuid          String     @id @db.VarChar(535)
  username      String     @db.VarChar(255)
  email         String     @db.VarChar(255)
  password_hash String     @db.Text
  articles      articles[]
}

model articles {
  id         Int           @id @default(autoincrement())
  image_url  String        @db.VarChar(535)
  title      String        @db.VarChar(535)
  content    String        @db.Text
  user_uuid  String        @db.VarChar(535)
  created_at DateTime      @db.Date
  updated_at DateTime      @db.Date
  type       articles_type
  users      users         @relation(fields: [user_uuid], references: [uuid], onUpdate: Restrict, map: "articles_ibfk_1")

  @@index([user_uuid], map: "user_uuid")
}

enum articles_type {
  NEWS
  ANNOUNCEMENT
}
